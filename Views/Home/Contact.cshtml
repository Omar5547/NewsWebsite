@model FirstCoreApp.Models.ContactUs

<div class="container" style="margin-top:25px; margin-bottom:25px">
    <div class="col-10">
        <form asp-action="SaveContact" asp-controller="Home" method="post">
            <div class="row">
                <div class="col-md-6 form-group">
                    <input type="text" asp-for="Name" class="form-control" placeholder="Your Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input type="email" class="form-control" asp-for="Email" placeholder="Your Email">
                    @* <span asp-validation-for="Email" class="text-danger"></span> *@
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="text" class="form-control" asp-for="Subject" placeholder="Subject">
            </div>
            <div class="form-group mt-3">
                <textarea class="form-control" asp-for="Message" rows="5" placeholder="Message"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div><button class="btn btn-success" type="submit">Send Message</button></div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
